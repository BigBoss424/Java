	public static int displayMenu(int choice)
	{
		Scanner kb = new Scanner(System.in);
		System.out.println("Please choose from the following");
		System.out.println("1) Output Hello World");
		System.out.println("2) Return an Array of the first 100 numbers divisible by 3 and 5");
		System.out.println("3) Palindrome Checker");
		System.out.println("4) Remove a letter from the word");
		System.out.println("5) Sum all the elements of an array");
		System.out.println("Choice --> ");
		choice = kb.nextInt();
		
		return choice;
	}
	
	
	
